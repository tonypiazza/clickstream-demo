# ==============================================================================
# Aiven Details
# ==============================================================================
aiven_api_token   = "your-api-token-here"
organization_name = "Your Organization"
billing_group_id  = "your-billing-group-id-here"
cloud_name        = "your-cloud-name"
project_name      = "clickstream-demo"

# ==============================================================================
# Service Plans
# ==============================================================================
kafka_plan      = "startup-4"
pg_plan         = "startup-4"
opensearch_plan = "startup-8"
valkey_plan     = "startup-4"

# ==============================================================================
# Service Versions
# ==============================================================================
kafka_version = "3.9"
pg_version    = "17"

# ==============================================================================
# Maintenance Window
# ==============================================================================
maintenance_window_dow  = "sunday"
maintenance_window_time = "04:00:00"

# ==============================================================================
# Protection
# ==============================================================================
termination_protection = false

# ==============================================================================
# Optional Services
# ==============================================================================
opensearch_enabled = false

# ==============================================================================
# Kafka Topic Settings (must match .env)
# ==============================================================================
kafka_events_topic_name         = "clickstream-events"
kafka_events_topic_partitions   = 3
kafka_events_topic_replication  = 2
kafka_events_topic_retention_ms = "604800000" # 7 days

# ==============================================================================
# PostgreSQL Settings (must match .env)
# ==============================================================================
pg_database_name = "clickstream"
